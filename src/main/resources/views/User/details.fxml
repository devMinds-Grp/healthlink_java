<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.healthlink.Controllers.User.Details" spacing="15"
      style="-fx-padding: 25; -fx-background-color: #f8f9fa;">

    <Label text="Détails du Patient" style="-fx-font-size: 18px; -fx-font-weight: bold;  ; -fx-text-fill: #2c3e50;"/>

    <VBox style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1);">
        <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="100"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
            <Label text="ID:" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
            <Label fx:id="idLabel" text="2" GridPane.columnIndex="1"/>

            <Label text="Nom:" style="-fx-font-weight: bold; -fx-text-fill: #555;" GridPane.rowIndex="1"/>
            <Label fx:id="nomLabel" text="bfgbggb" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Prénom:" style="-fx-font-weight: bold; -fx-text-fill: #555;" GridPane.rowIndex="2"/>
            <Label fx:id="prenomLabel" text="fbgfgbg" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Email:" style="-fx-font-weight: bold; -fx-text-fill: #555;" GridPane.rowIndex="3"/>
            <Label fx:id="emailLabel" text="fbfbg@gmail.com" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>
    </VBox>

    <HBox spacing="15" style="-fx-padding: 10 0 0 0;">
        <Button text="Fermer" style="-fx-background-color: #e0e0e0; -fx-text-fill: #333; -fx-padding: 8 15; -fx-background-radius: 4;"
                onAction="#handleClose"/>

    </HBox>
</VBox>