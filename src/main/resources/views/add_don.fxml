<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.healthlink.Controllers.AddDonController"
           alignment="CENTER"
           style="-fx-background-color: #f5f7fa;"
           stylesheets="@add_don.css">

    <!-- Formulaire centrÃ© -->
    <VBox alignment="TOP_CENTER" styleClass="form-container" maxWidth="500">
        <padding>
            <Insets top="30" right="40" bottom="30" left="40"/>
        </padding>

        <!-- Titre -->
        <VBox alignment="CENTER" spacing="10">
            <Label text="Add New Blood Donation" styleClass="form-title"/>
        </VBox>

        <!-- Contenu du formulaire -->
        <GridPane hgap="15" vgap="15" style="-fx-padding: 20 0 0 0;">
            <columnConstraints>
                <ColumnConstraints minWidth="150" halignment="RIGHT"/>
                <ColumnConstraints minWidth="250" hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- Description -->
            <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-label"/>
            <TextArea fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="0"
                      styleClass="form-field,text-area" wrapText="true"/>

            <!-- Location -->
            <Label text="Location:" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="form-label"/>
            <TextField fx:id="lieuField" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="form-field"/>

            <!-- Date -->
            <Label text="Date (YYYY-MM-DD):" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="form-label"/>
            <TextField fx:id="dateField" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="form-field"/>

            <!-- Phone Number -->
            <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="form-label"/>
            <TextField fx:id="numTelField" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="form-field"/>

            <!-- Boutons d'action -->
            <HBox spacing="25" alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="4"
                  style="-fx-padding: 20 0 0 0;">
                <Button text="Save" onAction="#handleSave" styleClass="primary-button"/>
                <Button text="Cancel" onAction="#handleCancel" styleClass="secondary-button"/>
            </HBox>
        </GridPane>
    </VBox>
</StackPane>